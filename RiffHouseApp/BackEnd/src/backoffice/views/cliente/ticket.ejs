<!DOCTYPE html>
<html lang="es">
    <head>
        <meta charset="UTF-8" />
        <title>Ticket</title>

        <style>
            body {
                font-family: Arial, sans-serif;
                padding: 20px;
            }

            h1 {
                text-align: center;
                margin-bottom: 10px;
            }

            p {
                margin: 4px 0;
            }

            table {
                width: 100%;
                border-collapse: collapse;
                margin-top: 15px;
            }

            th,
            td {
                border: 1px solid #333;
                padding: 8px;
                text-align: left;
            }

            .total {
                margin-top: 10px;
                font-size: 1.2rem;
                font-weight: bold;
                text-align: right;
            }
        </style>
    </head>
    <body>
        <h1>RiffHouse</h1>

        <p><b>Cliente:</b> <%= ticket.cliente %></p>
        <p><b>Fecha:</b> <%= new Date(ticket.fecha).toLocaleDateString() %></p>

        <table>
            <thead>
                <tr>
                    <th>Producto</th>
                    <th>Cantidad</th>
                    <th>Precio Unitario</th>
                    <th>Total:</th>
                </tr>
            </thead>
            <tbody>
                <% ticket.VentaProductos.forEach(vp => { %>
                <tr>
                    <td><%= vp.Producto.marca %> <%= vp.Producto.modelo %></td>
                    <td><%= vp.cantidad %></td>
                    <td>$ <%= vp.precioUnitario %></td>
                    <td>$ <%= (vp.precioUnitario * vp.cantidad) %></td>
                </tr>
                <% }) %>
            </tbody>
        </table>

        <p class="total">TOTAL: $ <%= ticket.total %></p>
    </body>
</html>
